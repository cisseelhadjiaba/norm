#!/bin/bash

requires_gcc 4.7

depends_on zlib
depends_on libncurses
depends_on python

fetch_source http://llvm.org/releases/3.6.0/llvm-3.6.0.src.tar.xz 6eb2b7381d924bb3f267281c9058c817d825d824

do_unpack

CC=gcc CXX=g++ \
do_compile_outside --disable-assertions --enable-optimized --enable-targets=host \
                   --enable-shared --disable-libedit

#!/bin/bash

requires_gcc 4.7

depends_on zlib
depends_on libncurses
depends_on python

fetch_source http://llvm.org/releases/3.7.1/llvm-3.7.1.src.tar.xz 5dbdcafac105273dcbff94c68837a66c6dd78cef

do_unpack

CC=gcc CXX=g++ \
do_compile_outside --disable-assertions --enable-optimized --enable-targets=host \
                   --enable-shared --disable-libedit --disable-bindings

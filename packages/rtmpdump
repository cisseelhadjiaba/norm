#!/bin/bash

depends_on openssl
depends_on zlib

fetch_source http://http.debian.net/debian/pool/main/r/rtmpdump/rtmpdump_2.4+20150115.gita107cef.orig.tar.gz a49454d252f8ced046f57ebc2c8569eae43d2eaf
fetch_debian http://http.debian.net/debian/pool/main/r/rtmpdump/rtmpdump_2.4+20150115.gita107cef-1.debian.tar.xz 8d7bc5b6929536e7a9e746de109e351caebfcd3d

do_undebian
pushd_src
[[ $OSTYPE == *darwin* ]] && sed -ibak 's|-Wl,-soname,$@||;s|SYS=posix|SYS=darwin|g' "$SRCDIR"/librtmp/Makefile
cd librtmp
do_make LIB_OPENSSL="-L$ESCAPED_PREFIX/lib $LDFLAGS -lssl -lcrypto -lz" prefix="$PREFIX"
do_install prefix=$PREFIX
cd ..
sed -ibak '/@cd librtmp;/d' Makefile
do_make LIB_OPENSSL="-L$ESCAPED_PREFIX/lib $LDFLAGS -lssl -lcrypto -lz" LIB_RTMP="-L$ESCAPED_PREFIX/lib $LDFLAGS -lrtmp" prefix="$PREFIX"
do_install prefix=$PREFIX
popd_src

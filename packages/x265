#!/bin/bash

[[ $OSTYPE == *linux* ]] && requires_gcc 4.4 for atomic builtins on 64-bit integers

depends_on yasm
depends_on cmake
[[ $OSTYPE == *linux* ]] && depends_on libnuma

fetch_source https://bitbucket.org/multicoreware/x265/downloads/x265_2.5.tar.gz 239e51560a6bdde934142f1c6f884d6e37cbe755

do_unpack
SRCDIR="$SRCDIR/source"
do_compile

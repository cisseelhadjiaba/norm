#!/bin/bash

requires_gcc 4.4 for atomic builtins on 64-bit integers

depends_on yasm
depends_on cmake

fetch_source http://ftp.videolan.org/pub/videolan/x265/x265_1.6.tar.gz

do_unpack
pushd_src
cmake source -DCMAKE_INSTALL_PREFIX=\'"$PREFIX"\' -DCMAKE_BUILD_TYPE=Release -DCMAKE_SKIP_RPATH=ON
do_make
do_install
popd


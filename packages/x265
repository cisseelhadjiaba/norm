#!/bin/bash

requires_gcc 4.4 for atomic builtins on 64-bit integers

depends_on yasm
depends_on cmake
depends_on libnuma

fetch_source https://bitbucket.org/multicoreware/x265/downloads/x265_2.0.tar.gz 358d7208a071c811d72fc100890ac86b0fde1255

do_unpack
pushd_src
cmake source -DCMAKE_INSTALL_PREFIX=\'"$PREFIX"\' -DCMAKE_BUILD_TYPE=Release -DCMAKE_SKIP_RPATH=ON
do_make
do_install
popd


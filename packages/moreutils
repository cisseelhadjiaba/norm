#!/bin/bash

## heavy dependencies for generating manpages. TODO: make optional or remove them
depends_on libxml ## for xmllint
depends_on libxslt ## for xsltproc
depends_on docbook-xsl

fetch_source http://http.debian.net/debian/pool/main/m/moreutils/moreutils_0.60.orig.tar.xz 3af60490f763ece48b2fcba968903673c3e63495
fetch_debian http://http.debian.net/debian/pool/main/m/moreutils/moreutils_0.60-1.debian.tar.xz a38f8bd2c9f9e1c5e12ac18f3ff35183db7d8d6a

do_undebian
pushd_src
do_make DOCBOOKXSL="$PREFIX"/share/docbook-xsl
do_test
do_install PREFIX="$PREFIX"
popd_src


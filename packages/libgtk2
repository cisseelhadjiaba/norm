#!/bin/bash

needs_tool pkg-config

depends_on glib
depends_on libatk
depends_on libpango
depends_on libcairo
depends_on gdk-pixbuf
depends_on libx11
depends_on libxrender

depends_on libxcursor ## opportunistic linking
depends_on libxcomposite ## opportunistic linking
depends_on libxinerama ## opportunistic linking
depends_on libxdamage ## opportunistic linking
depends_on libxrandr ## opportunistic linking

fetch_source http://ftp.gnome.org/pub/gnome/sources/gtk+/2.24/gtk+-2.24.32.tar.xz c885ade62b06854590822c8eb906daf7dd15d90a

CONFFLAGS=(
--disable-introspection
--disable-cups
)

do_unpack
do_compile_outside "${CONFFLAGS[@]}"

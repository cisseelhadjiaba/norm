#!/bin/bash

depends_on cmake

fetch_source https://github.com/google/snappy/archive/1.1.7.tar.gz 1ec676b842fc96fd8a95b03c12758935e7f257b0

do_unpack

## for both shared and static libraries we need to build twice
pushd_src
do_cmake
do_make
do_test
do_install
do_make clean
do_cmake -DBUILD_SHARED_LIBS=ON
do_make
do_test
do_install
popd_src

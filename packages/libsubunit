#!/bin/bash

needs_tool autoconf automake libtool
needs_tool python
needs_tool pkg-config ## for autoconf macros
depends_on libcheck
depends_on libcppunit

fetch_source https://github.com/testing-cabal/subunit/archive/1.3.0.tar.gz ca79cd30fce14fcb1a52a3df02c9f55d195cce73

do_unpack
do_autoreconf
do_compile

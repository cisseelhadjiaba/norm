#!/bin/bash

needs_tool python
depends_on libxslt ## for xsltproc
depends_on docbook-xml
depends_on docbook-xsl
needs_tool itstool

fetch_source http://ftp.gnome.org/pub/gnome/sources/gtk-doc/1.28/gtk-doc-1.28.tar.xz f48311fd3def5b393ebb32d5480a61ec6dfd2809

## gtk-doc doesn't have any tests
do_unpack_compile_notest --with-xml-catalog="$PREFIX"/etc/xml/catalog --disable-nls

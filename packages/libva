#!/bin/bash

needs_tool pkg-config
depends_on libdrm
depends_on libx11     ## opportunistic linking
depends_on libwayland ## opportunistic linking
depends_on libxext    ## opportunistic linking
depends_on libxfixes  ## opportunistic linking

fetch_source https://github.com/intel/libva/releases/download/2.1.0/libva-2.1.0.tar.bz2 9ecde2b6c9deda16e895a0b00b8aef3a765acb4c

do_unpack_compile --disable-glx

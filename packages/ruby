#!/bin/bash

depends_on pkg-config
depends_on libgdbm
depends_on libncurses
depends_on libreadline
depends_on zlib
depends_on openssl
depends_on libffi
depends_on libgmp

fetch_source http://cache.ruby-lang.org/pub/ruby/2.2/ruby-2.2.4.tar.gz 818e5e157f76d4912ba3a7c7b4fc5156105e83c3

do_unpack
pushd_src
do_configure
do_make
! is_without tests && env - PATH="$PATH" make test
do_install
popd

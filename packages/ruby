#!/bin/bash

depends_on pkg-config
depends_on libgdbm
depends_on libncurses
depends_on libreadline
depends_on zlib
depends_on openssl
depends_on libffi
depends_on libgmp

fetch_source http://cache.ruby-lang.org/pub/ruby/2.3/ruby-2.3.1.tar.gz c39b4001f7acb4e334cb60a0f4df72d434bef711

do_unpack
pushd_src
do_configure
do_make
! is_without tests && env - PATH="$PATH" make test
do_install
popd

#!/bin/bash

if [[ $HOSTTYPE == x86_64 ]] && ! test_cc 'int main() { return 0;}' -m32; then
    log "Your compiler doesn't know how to make 32-bit binaries. Wine is 32-bit application. Aborting."
    exit 1
fi

needs_tool flex bison
depends_on libx11
depends_on freetype
depends_on fontconfig
depends_on gettext
depends_on prelink
depends_on libxrender
depends_on libxrandr
depends_on libxslt
depends_on libjpeg
depends_on libasound
depends_on libxcursor
depends_on libxi
depends_on libxinerama
depends_on libxcomposite
depends_on libdbus
depends_on libncurses
depends_on libtiff
depends_on openldap
depends_on mesa
depends_on libglu
depends_on libgstreamer-plugins-base

fetch_source http://dl.winehq.org/wine/source/2.x/wine-2.18.tar.xz f7d7bfd413358ef2473cd28c5fe936a095c92ebf

do_unpack_compile

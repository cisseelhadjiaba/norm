#!/bin/bash

if [[ $HOSTTYPE == x86_64 ]] && ! test_cc 'main() { return 0;}' -m32; then
    log "Your compiler doesn't know how to make 32-bit binaries. Wine is 32-bit application. Aborting."
    exit 1
fi

depends_on flex bison
depends_on libx11
depends_on freetype
depends_on fontconfig
depends_on gettext
depends_on prelink
depends_on libxrender
depends_on libxrandr
depends_on libxslt
depends_on libjpeg
depends_on libasound
depends_on libxcursor
depends_on libxi
depends_on libxinerama
depends_on libxcomposite
depends_on libdbus
depends_on libncurses
depends_on libtiff
depends_on openldap
depends_on mesa
depends_on libglu
depends_on libgstreamer-plugins-base

fetch_source http://dl.winehq.org/wine/source/1.9/wine-1.9.3.tar.bz2 2f9565017719ab1057907621ea5775a37023cdd7

do_unpack_compile

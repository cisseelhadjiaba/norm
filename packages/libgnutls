#!/bin/bash

needs_tool pkg-config # to find libnettle
depends_on libnettle

fetch_source https://www.gnupg.org/ftp/gcrypt/gnutls/v3.5/gnutls-3.5.19.tar.xz 51b29b7e37467a765378f3c8e546a5c1bb2a5054

CONFFLAGS=(
--with-included-libtasn1
--with-included-unistring
--without-p11-kit
--disable-guile
--disable-libdane
--enable-local-libopts
--without-zlib
--without-idn
)

do_unpack_compile "${CONFFLAGS[@]}"

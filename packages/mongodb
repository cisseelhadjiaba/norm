#!/bin/bash

## TODO: needs python modules typing and Cheetah.Template to install

needs_tool python ## needs python modules and pip
needs_tool scons

fetch_source https://fastdl.mongodb.org/src/mongodb-src-r4.0.1.tar.gz ec9cbf7aa9a1d326f108367d212c0d34843595c3

pip install typing cheetah regex PyYAML

do_unpack
pushd_src
prefix="$PREFIX" CCFLAGS="$CPPFLAGS" scons -j $NUMJOBS #PREFIX="$PREFIX" CFLAGS="-O2 -g $CPPFLAGS" LINKFLAGS="$LDFLAGS"
scons install

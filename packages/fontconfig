#!/bin/bash

depends_on pkg-config
depends_on freetype
depends_on libxml
depends_on libexpat
depends_on gperf

fetch_source http://www.freedesktop.org/software/fontconfig/release/fontconfig-2.12.6.tar.bz2 cae963814ba4bc41f3c96876604d33fc3abfc572
do_unpack
do_compile --disable-docs

ln -fs ../../../share/fontconfig/conf.avail/70-no-bitmaps.conf $PREFIX/etc/fonts/conf.d/

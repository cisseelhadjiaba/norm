#!/bin/bash

needs_tool pkg-config
depends_on freetype
[[ $OSTYPE == *linux* ]] && depends_on libuuid
needs_tool gperf
depends_on libexpat

fetch_source http://www.freedesktop.org/software/fontconfig/release/fontconfig-2.13.1.tar.bz2 75612356ef4f801735b49baf987f8942b4a7a5e1
do_unpack
do_compile --disable-docs

ln -fs ../../../share/fontconfig/conf.avail/70-no-bitmaps.conf $PREFIX/etc/fonts/conf.d/

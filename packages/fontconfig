#!/bin/bash

depends_on pkg-config
depends_on freetype
depends_on libxml
depends_on libexpat
depends_on gperf

fetch_source http://www.freedesktop.org/software/fontconfig/release/fontconfig-2.13.0.tar.bz2 b7bcc5d47211b7bbac35bb221860407db3601f5b
do_unpack
do_compile --disable-docs

ln -fs ../../../share/fontconfig/conf.avail/70-no-bitmaps.conf $PREFIX/etc/fonts/conf.d/

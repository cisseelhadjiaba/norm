#!/bin/bash

depends_on pkg-config
depends_on freetype
depends_on libxml
depends_on libexpat
depends_on gperf

fetch_source http://www.freedesktop.org/software/fontconfig/release/fontconfig-2.12.5.tar.bz2 edacb706ac3ef51034cc3f335faeb76e0c15f532
do_unpack
do_compile --disable-docs

ln -fs ../../../share/fontconfig/conf.avail/70-no-bitmaps.conf $PREFIX/etc/fonts/conf.d/

#!/bin/bash

depends_on pkg-config
depends_on zlib
depends_on libaio
depends_on libuuid
depends_on curl
depends_on libpng
depends_on libjpeg
depends_on libasound
depends_on pixman
depends_on glib
depends_on liblzo
depends_on libseccomp
depends_on libcap-ng
depends_on libsdl
depends_on libncurses
depends_on libssh2
depends_on bison
depends_on flex

fetch_source http://wiki.qemu-project.org/download/qemu-2.4.0.1.tar.bz2 10701fb6fbb44646b2f655c6ab097cf7a04b2b52

do_unpack_compile --with-system-pixman \
                  --extra-cflags="$CPPFLAGS -I$ESCAPED_PREFIX/include/ncurses" --extra-ldflags="$LDFLAGS"

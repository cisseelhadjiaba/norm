#!/bin/bash

depends_on libuuid
depends_on curl
depends_on libpng
depends_on libjpeg
depends_on libasound
depends_on pixman
depends_on glib
depends_on liblzo
depends_on libnss

fetch_source http://wiki.qemu-project.org/download/qemu-2.3.0.tar.bz2 373d74bfafce1ca45f85195190d0a5e22b29299e

do_unpack_compile --disable-sdl --disable-gtk --disable-vnc --disable-attr --with-system-pixman \
                  --extra-cflags="$CPPFLAGS" --extra-ldflags="$LDFLAGS"

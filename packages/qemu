#!/bin/bash

needs_tool python
needs_tool pkg-config
depends_on libsdl
depends_on glib
depends_on pixman
depends_on libx11

fetch_source http://wiki.qemu-project.org/download/qemu-2.12.0.tar.bz2 300ade3de7ad6089a7f0b846c2d0dcc5ff0cd0b6

CONFFLAGS=(
--disable-seccomp ## seccomp causes troubles with musl/alpine
--disable-libnfs
--disable-bluez
--enable-sdl
--disable-gtk
--extra-cflags="$CPPFLAGS"
--extra-ldflags="$LDFLAGS"
)

## testing hangs because test scripts do not kill a qemu process
do_unpack_compile_notest "${CONFFLAGS[@]}"

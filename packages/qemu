#!/bin/bash

depends_on pkg-config
depends_on zlib
depends_on libaio
depends_on curl
depends_on libpng
depends_on libjpeg
depends_on libasound
depends_on pixman
depends_on glib
depends_on liblzo
depends_on libseccomp
depends_on libcap-ng
depends_on libsdl
depends_on libncurses
depends_on libssh2
depends_on bison
depends_on flex
depends_on libepoxy
needs_tool python
depends_on libnuma
depends_on libsnappy
depends_on libusb
depends_on libsasl

fetch_source http://wiki.qemu-project.org/download/qemu-2.10.0.tar.bz2 d748abac54c0751e420eaf69d27561f94b5b195f

## testing hangs because test scripts do not kill a qemu process
do_unpack_compile_notest --with-system-pixman \
                  --disable-libnfs \
                  --disable-bluez \
                  --enable-sdl --disable-gtk \
                  --extra-cflags="$CPPFLAGS -I$ESCAPED_PREFIX/include/ncurses" --extra-ldflags="$LDFLAGS"

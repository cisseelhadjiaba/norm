#!/bin/bash

depends_on pkg-config
depends_on zlib
depends_on libaio
depends_on libuuid
depends_on curl
depends_on libpng
depends_on libjpeg
depends_on libasound
depends_on pixman
depends_on glib
depends_on liblzo
depends_on libseccomp
depends_on libcap-ng
depends_on libsdl
depends_on libncurses
depends_on libssh2
depends_on bison
depends_on flex

fetch_source http://wiki.qemu-project.org/download/qemu-2.7.0.tar.bz2 96737d31a2fb74553dacbd0ddaa93014858dc986

do_unpack_compile --with-system-pixman \
                  --extra-cflags="$CPPFLAGS -I$ESCAPED_PREFIX/include/ncurses" --extra-ldflags="$LDFLAGS"

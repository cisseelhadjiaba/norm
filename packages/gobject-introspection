#!/bin/bash

depends_on pkg-config
needs_tool flex
needs_tool bison
needs_tool python
depends_on glib
depends_on libffi

## newer gobject-introspection depends on newer glib, but newer glib doesn't compile on old gcc
fetch_source http://ftp.gnome.org/pub/GNOME/sources/gobject-introspection/1.52/gobject-introspection-1.52.1.tar.xz 2a0c86bd23d27df0588b79404cfc5619ed6171e8

do_unpack_compile

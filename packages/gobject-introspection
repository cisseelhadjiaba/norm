#!/bin/bash

depends_on pkg-config
depends_on autoconf automake libtool
depends_on flex
depends_on bison
depends_on python
depends_on glib
depends_on libffi

## newer gobject-introspection depends on newer glib, but newer glib doesn't compile on old gcc
fetch_source http://http.debian.net/debian/pool/main/g/gobject-introspection/gobject-introspection_1.42.0.orig.tar.xz b3e095004aa8321a5a814aacd019e6953d69c4eb
fetch_debian http://http.debian.net/debian/pool/main/g/gobject-introspection/gobject-introspection_1.42.0-2.2.debian.tar.xz 902af2312f9ebd28aec727ed75fc60f53f637648

do_undebian
do_autoreconf
do_compile ## tests depend on libcairo

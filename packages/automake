#!/bin/bash

depends_on autoconf help2man

#mkdir -p "$PREFIX/share/aclocal"

fetch_source http://http.debian.net/debian/pool/main/a/automake-1.15/automake-1.15_1.15.orig.tar.xz c279b35ca6c410809dac8ade143b805fb48b7655
fetch_debian http://http.debian.net/debian/pool/main/a/automake-1.15/automake-1.15_1.15-5.debian.tar.xz 4abf264ec47faa76427a5bf4b4f207b18dd49e98

do_undebian
pushd_src
./bootstrap.sh
MAKEINFO=true do_compile_notest ## TODO: 7 tests fail on clean debian jessie, for some reason
cat <<EOF > "$PREFIX/share/aclocal/dirlist"
$PREFIX/share/aclocal
/usr/local/share/aclocal
/usr/share/aclocal
EOF
popd_src

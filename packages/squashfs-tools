#!/bin/bash

depends_on zlib
depends_on xz liblzo

fetch_source http://http.debian.net/debian/pool/main/s/squashfs-tools/squashfs-tools_4.2+20130409.orig.tar.xz
fetch_debian http://http.debian.net/debian/pool/main/s/squashfs-tools/squashfs-tools_4.2+20130409-2.debian.tar.xz

do_undebian
pushd_src
sed -i 's|#XZ_SUPPORT|XZ_SUPPORT|' Makefile
sed -i 's|#LZO_SUPPORT|LZO_SUPPORT|' Makefile
sed -i "s|/usr/local|$PREFIX/|" Makefile
do_make EXTRA_CFLAGS="$CPPFLAGS -std=gnu99" EXTRA_LDFLAGS="$LDFLAGS"
do_install
popd

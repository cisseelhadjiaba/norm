#!/bin/bash

depends_on pkg-config
[[ $OSTYPE == *linux* ]] && depends_on libselinux
depends_on libexpat
depends_on libsm
depends_on libice
depends_on libx11
depends_on libxcb
depends_on libxau
depends_on libxdmcp
depends_on libcap
depends_on xz
depends_on liblz4
depends_on libgcrypt

fetch_source http://dbus.freedesktop.org/releases/dbus/dbus-1.11.18.tar.gz e7130abf75b3868b05d145e0d05286be23e5f604

do_unpack_compile --disable-modular-tests --disable-libaudit --disable-xml-docs --disable-doxygen-docs \
                  --disable-systemd \
                  --with-systemdsystemunitdir="$PREFIX/lib/systemd/system"

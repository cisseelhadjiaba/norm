#!/bin/bash

depends_on pkg-config
depends_on libselinux
depends_on libexpat
depends_on libsm
depends_on libice
depends_on libx11
depends_on libxcb
depends_on libxau
depends_on libxdmcp
depends_on libcap
depends_on xz
depends_on liblz4
depends_on libgcrypt

fetch_source http://dbus.freedesktop.org/releases/dbus/dbus-1.11.12.tar.gz 2e2247398abb22115e724b5e955fece2307dddb0

do_unpack_compile --disable-modular-tests --disable-libaudit --disable-xml-docs --disable-doxygen-docs \
                  --disable-systemd \
                  --with-systemdsystemunitdir="$PREFIX/lib/systemd/system"

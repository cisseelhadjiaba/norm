#!/bin/bash

depends_on pkg-config
[[ $OSTYPE == *linux* ]] && depends_on libselinux
depends_on libexpat
depends_on libsm
depends_on libice
depends_on libx11
depends_on libxcb
depends_on libxau
depends_on libxdmcp
depends_on libcap
depends_on xz
depends_on liblz4
depends_on libgcrypt

fetch_source http://dbus.freedesktop.org/releases/dbus/dbus-1.12.0.tar.gz 45e5a28e75b3aa4f8da580c7b5cd2cf44347758d

do_unpack_compile --disable-modular-tests --disable-libaudit --disable-xml-docs --disable-doxygen-docs \
                  --disable-systemd \
                  --with-systemdsystemunitdir="$PREFIX/lib/systemd/system"

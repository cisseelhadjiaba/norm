#!/bin/bash

needs_tool pkg-config
depends_on libexpat

fetch_source http://dbus.freedesktop.org/releases/dbus/dbus-1.12.10.tar.gz efd426031424519011e46d28256626a5ca20195c

CONFFLAGS=(
--disable-systemd
--disable-selinux
--disable-libaudit
--disable-apparmor
)
do_unpack
sed -i 's|X11/Xlib.h|testfail.testfail|g' "$SRCDIR"/configure ## patch out x11 support
do_compile "${CONFFLAGS[@]}"

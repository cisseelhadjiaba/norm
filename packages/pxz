#!/bin/bash

requires_gcc 4.2 for -fopenmp support

depends_on xz

fetch_source http://http.debian.net/debian/pool/main/p/pxz/pxz_4.999.99~beta3+git659fc9b.orig.tar.bz2
fetch_debian http://http.debian.net/debian/pool/main/p/pxz/pxz_4.999.99~beta3+git659fc9b-3.debian.tar.xz

do_unpack
pushd_src
sed -i "s|/usr/|$PREFIX/|" Makefile
sed -i 's|cp $(NAME) |install -m 0755 $(NAME) |' Makefile
sed -i 's|cp $(NAME).1 |install -m 0644 $(NAME).1 |' Makefile
do_make
do_install
popd


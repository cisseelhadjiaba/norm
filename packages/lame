#!/bin/bash
fetch_source https://downloads.sourceforge.net/sourceforge/lame/lame-3.100.tar.gz 64c53b1a4d493237cef5e74944912cd9f98e618d

unset EXTRALD EXTRAFLAGS
cc_addflags EXTRAFLAGS -msse2 -msse
cc_addflags EXTRALD -Wl,z,defs

do_unpack


sed -ibak -e ':a' -e 'N' -e '$!ba' -e 's/lame_init_old\n//g' "$SRCDIR"/include/libmp3lame.sym

LDFLAGS="$LDFLAGS $EXTRALD" \
CFLAGS="$CFLAGS $EXTRAFLAGS" \
do_compile

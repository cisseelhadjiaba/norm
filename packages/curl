#!/bin/bash

[[ $OSTYPE != *darwin* ]] && depends_on openssl
depends_on zlib

fetch_source http://curl.mirror.anstey.ca/curl-7.55.1.tar.gz 6ba5bd47ed5fca42cd68ae315a4e49b38f0fb0ab

CONFIGURE=(
--disable-ldap
--enable-optimize
--without-libssh2
--without-librtmp
--without-libpsl
--without-nghttp2
)

[[ $OSTYPE != *darwin* ]] && CONFIGURE+=("--with-ca-bundle=$PREFIX/etc/ssl/cert.pem")
[[ $OSTYPE == *darwin* ]] && CONFIGURE+=(--with-darwinssl --without-ca-bundle)

do_unpack_compile "${CONFIGURE[@]}"

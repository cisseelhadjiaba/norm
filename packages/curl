#!/bin/bash

[[ $OSTYPE != *darwin* ]] && depends_on openssl
depends_on zlib

fetch_source http://curl.mirror.anstey.ca/curl-7.57.0.tar.gz bb961986e3e3ef4762c6368db8f6463f3068cb25

CONFIGURE=(
--disable-ldap
--enable-optimize
--without-libssh2
--without-librtmp
--without-libpsl
--without-nghttp2
)

[[ $OSTYPE != *darwin* ]] && CONFIGURE+=("--with-ca-bundle=$PREFIX/etc/ssl/cert.pem")
[[ $OSTYPE == *darwin* ]] && CONFIGURE+=(--with-darwinssl --without-ca-bundle)

do_unpack
sed -i.bak "s|mmacosx-version-min=10.8|mmacosx-version-min=$NORM_OSX_VERSION|" "$SRCDIR"/configure
do_compile "${CONFIGURE[@]}"

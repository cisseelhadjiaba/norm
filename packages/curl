#!/bin/bash

[[ $OSTYPE != *darwin* ]] && depends_on openssl
depends_on zlib

fetch_source http://curl.mirror.anstey.ca/curl-7.54.0.tar.gz be5b7f10fc34722e324e8c552fcdfe120e164836

CONFIGURE=(
--disable-ldap
--enable-optimize
--without-libssh2
--without-librtmp
--without-libpsl
--without-nghttp2
)

[[ $OSTYPE != *darwin* ]] && CONFIGURE+=("--with-ca-bundle=$PREFIX/etc/ssl/cert.pem")
[[ $OSTYPE == *darwin* ]] && CONFIGURE+=(--with-darwinssl --without-ca-bundle)

do_unpack_compile "${CONFIGURE[@]}"

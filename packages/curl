#!/bin/bash

depends_on pkg-config
depends_on autoconf automake libtool
depends_on libidn
depends_on openssl
depends_on zlib

fetch_source http://security.debian.org/debian-security/pool/updates/main/c/curl/curl_7.38.0.orig.tar.gz 40d8ec9063f076005535139c9229ac77c57f0300
fetch_debian http://security.debian.org/debian-security/pool/updates/main/c/curl/curl_7.38.0-4+deb8u3.debian.tar.xz 357580f1f162f0930566ca3bf5f53d4fe57b98d0

do_undebian
do_autoreconf
do_compile --disable-ldap --enable-optimize --without-libssh2 --with-ca-bundle=$PREFIX/etc/ssl/cert.pem

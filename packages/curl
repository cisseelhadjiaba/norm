#!/bin/bash

[[ $OSTYPE != *darwin* ]] && depends_on openssl
depends_on zlib

fetch_source http://curl.mirror.anstey.ca/curl-7.52.0.tar.gz 3245279c34b058357ca2cdb0126dd25162e7610f

CONFIGURE=(
--disable-ldap
--enable-optimize
--without-libssh2
--without-rtmp
--without-libpsl
)

[[ $OSTYPE != *darwin* ]] && CONFIGURE+=("--with-ca-bundle=$PREFIX/etc/ssl/cert.pem")
[[ $OSTYPE == *darwin* ]] && CONFIGURE+=(--with-darwinssl --without-ca-bundle)

do_unpack_compile "${CONFIGURE[@]}"

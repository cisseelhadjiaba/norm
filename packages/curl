#!/bin/bash

depends_on pkg-config
depends_on autoconf automake libtool
depends_on libidn
depends_on openssl
depends_on zlib

fetch_source http://dl.uxnr.de/mirror/curl/curl-7.49.0.tar.gz df31c8534ade02b138b6a5680b17e334b5e12a68

do_unpack
do_autoreconf
do_compile --disable-ldap --enable-optimize --without-libssh2 --with-ca-bundle=$PREFIX/etc/ssl/cert.pem

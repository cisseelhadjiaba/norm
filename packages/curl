#!/bin/bash

depends_on pkg-config
depends_on autoconf automake libtool
depends_on libidn
depends_on openssl
depends_on zlib

fetch_source http://dl.uxnr.de/mirror/curl/curl-7.48.0.tar.gz eac95625b849408362cf6edb0bc9489da317ba30

do_unpack
do_autoreconf
do_compile --disable-ldap --enable-optimize --without-libssh2 --with-ca-bundle=$PREFIX/etc/ssl/cert.pem

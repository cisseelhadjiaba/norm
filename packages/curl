#!/bin/bash

depends_on pkg-config
depends_on autoconf automake libtool
depends_on libidn
depends_on openssl
depends_on zlib

fetch_source http://dl.uxnr.de/mirror/curl/curl-7.50.1.tar.gz c8db732c280059f570fc39c6b49ae5c1f19ee5ef

do_unpack
do_autoreconf
do_compile --disable-ldap --enable-optimize --without-libssh2 --with-ca-bundle=$PREFIX/etc/ssl/cert.pem

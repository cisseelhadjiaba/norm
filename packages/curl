#!/bin/bash

depends_on pkg-config
depends_on autoconf automake libtool
depends_on libidn
depends_on openssl
depends_on zlib

fetch_source http://dl.uxnr.de/mirror/curl/curl-7.50.0.tar.gz d169757262090ee0486eabf29c267e4a478efe41

do_unpack
do_autoreconf
do_compile --disable-ldap --enable-optimize --without-libssh2 --with-ca-bundle=$PREFIX/etc/ssl/cert.pem

#!/bin/bash

[[ $OSTYPE != *darwin* ]] && depends_on openssl
depends_on zlib

fetch_source http://curl.mirror.anstey.ca/curl-7.53.1.tar.gz 6cdc776ef2bcf3271f4cfd1129c6b44b5a2366e7

CONFIGURE=(
--disable-ldap
--enable-optimize
--without-libssh2
--without-librtmp
--without-libpsl
--without-nghttp2
)

[[ $OSTYPE != *darwin* ]] && CONFIGURE+=("--with-ca-bundle=$PREFIX/etc/ssl/cert.pem")
[[ $OSTYPE == *darwin* ]] && CONFIGURE+=(--with-darwinssl --without-ca-bundle)

do_unpack_compile "${CONFIGURE[@]}"

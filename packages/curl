#!/bin/bash

depends_on pkg-config
depends_on libidn
depends_on openssl
depends_on zlib

fetch_source http://curl.haxx.se/download/curl-7.46.0.tar.gz 7775b7f79e820d50a86f0dbe59c7afe766129e8a

do_unpack_compile --disable-ldap --enable-optimize --without-libssh2 --with-ca-bundle=$PREFIX/etc/ssl/cert.pem

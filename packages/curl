#!/bin/bash

depends_on pkg-config
depends_on autoconf automake libtool
depends_on libidn
depends_on openssl
depends_on zlib

fetch_source http://dl.uxnr.de/mirror/curl/curl-7.49.1.tar.gz 40c10cbe00891003e7f591d43f46280effc927a5

do_unpack
do_autoreconf
do_compile --disable-ldap --enable-optimize --without-libssh2 --with-ca-bundle=$PREFIX/etc/ssl/cert.pem

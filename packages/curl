#!/bin/bash

depends_on pkg-config
depends_on libidn
depends_on openssl
depends_on zlib

fetch_source http://curl.haxx.se/download/curl-7.47.0.tar.gz 2f8d3edacb1073e1c8f67dc68bba6dc5f3fdbf85

do_unpack_compile --disable-ldap --enable-optimize --without-libssh2 --with-ca-bundle=$PREFIX/etc/ssl/cert.pem

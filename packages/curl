#!/bin/bash

depends_on pkg-config
depends_on libidn
depends_on openssl
depends_on zlib

fetch_source http://curl.haxx.se/download/curl-7.47.1.tar.gz 09952f607522e39b82a72c604df276255cdb9918

do_unpack_compile --disable-ldap --enable-optimize --without-libssh2 --with-ca-bundle=$PREFIX/etc/ssl/cert.pem

#!/bin/bash

needs_tool intltool ## found no way to disable
needs_tool pkg-config
depends_on glib
depends_on libxslt ## for xsltproc
depends_on libgcrypt
depends_on docbook-xsl
needs_tool gettext

fetch_source http://ftp.gnome.org/pub/GNOME/sources/libsecret/0.18/libsecret-0.18.6.tar.xz e840a40062c135f4eec41f057a326d9ed519ff4f

do_unpack_compile --disable-nls

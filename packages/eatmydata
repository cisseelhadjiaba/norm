#!/bin/bash

needs_tool autoconf automake libtool
! is_without tests && [[ $OSTYPE == *linux* ]] && needs_tool strace ## needed to run tests

fetch_source https://github.com/stewartsmith/libeatmydata/archive/6672fa712dc8051e928c05c72e57398b38dcd4d6.tar.gz 7fb477b6ecb80dbdc653763d746d2d0f6155f08f

do_unpack
do_autoreconf
do_compile

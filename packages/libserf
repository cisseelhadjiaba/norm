#!/bin/bash

needs_tool scons
depends_on libapr
depends_on libaprutil

fetch_source https://www.apache.org/dist/serf/serf-1.3.9.tar.bz2 26015c63e3bbb108c1689bf2090e4c26351db674

do_unpack
pushd_src
scons APR="$PREFIX" APU="$PREFIX" OPENSSL="$PREFIX" PREFIX="$PREFIX" CFLAGS="-O2 -g $CPPFLAGS" LINKFLAGS="$LDFLAGS"
scons test
scons install
popd_src

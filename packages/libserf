#!/bin/bash

needs_tool scons
depends_on libapr
depends_on libaprutil
depends_on openssl
depends_on zlib

fetch_source https://www.apache.org/dist/serf/serf-1.3.9.tar.bz2 26015c63e3bbb108c1689bf2090e4c26351db674

do_unpack
pushd_src

CONFFLAGS=(
APR="$PREFIX"
APU="$PREFIX"
PREFIX="$PREFIX"
CFLAGS="-O2 -g $CPPFLAGS"
LINKFLAGS="$LDFLAGS"
OPENSSL="$PREFIX"
)

scons "${CONFFLAGS[@]}"
scons test
scons install
popd_src

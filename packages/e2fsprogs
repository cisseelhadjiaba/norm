#!/bin/bash

depends_on pkg-config
[[ $OSTYPE == *linux* ]] && depends_on libuuid
depends_on libblkid

fetch_source https://downloads.sourceforge.net/e2fsprogs/e2fsprogs/v1.44.0/e2fsprogs-1.44.0.tar.gz 302a3eff5ca362c3d2a63a0a60860a3076f29f2e

CONFFLAGS="--disable-defrag --enable-symlink-install --disable-libblkid --disable-uuidd --disable-fsck --disable-libuuid"
[[ $OSTYPE == *linux* ]] && CONFFLAGS="$CONFFLAGS --enable-elf-shlibs"

do_unpack
pushd_src
mkdir -p build
cd build
do_configure $CONFFLAGS
do_make
do_test
do_install
make install-libs
popd

#!/bin/bash

depends_on pkg-config
[[ $OSTYPE == *linux* ]] && depends_on libuuid
depends_on libblkid

fetch_source https://downloads.sourceforge.net/e2fsprogs/e2fsprogs/v1.43.8/e2fsprogs-1.43.8.tar.gz 6975f7efcd3e31aed8f9b645eb3ca7bb087c794a

CONFFLAGS="--disable-defrag --enable-symlink-install --disable-libblkid --disable-uuidd --disable-fsck --disable-libuuid"
[[ $OSTYPE == *linux* ]] && CONFFLAGS="$CONFFLAGS --enable-elf-shlibs"

do_unpack
pushd_src
mkdir -p build
cd build
do_configure $CONFFLAGS
do_make
do_test
do_install
make install-libs
popd

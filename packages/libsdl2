#!/bin/bash

## TODO: on osx, libsndio is linked without rpath
[[ $OSTYPE == *linux* ]] && depends_on libsndio  ## opportunistic linking, but useful for having audio
[[ $OSTYPE == *linux* ]] && depends_on libasound ## opportunistic linking, but useful for having audio

fetch_source https://libsdl.org/release/SDL2-2.0.8.tar.gz 959ec6ded277821995d2e3cafd973f6ab9f48ab7

do_unpack
NEEDV1=1 do_compile_outside_notest

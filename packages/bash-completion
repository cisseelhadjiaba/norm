#!/bin/bash

fetch_source http://http.debian.net/debian/pool/main/b/bash-completion/bash-completion_2.1.orig.tar.bz2 b74bf7d83646e1412bb07dbb1de09db1c9715599
fetch_debian http://http.debian.net/debian/pool/main/b/bash-completion/bash-completion_2.1-4.debian.tar.xz b6730161a33f4f3f6ac6731c95f2fd999b8fea64

do_undebian_compile

add_caveat \
"-----------------------------" \
"Add following line to your .bash_profile:" \
"" \
"[ -f $PREFIX/etc/bash_completion ] && . $PREFIX/etc/bash_completion" \
"-----------------------------"

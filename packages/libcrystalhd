#!/bin/bash

fetch_source http://http.debian.net/debian/pool/main/c/crystalhd/crystalhd_0.0~git20110715.fdd2f19.orig.tar.gz b051c1522e53120d5d3a35f3639c8c6dc69918da
fetch_debian http://http.debian.net/debian/pool/main/c/crystalhd/crystalhd_0.0~git20110715.fdd2f19-12.debian.tar.xz ed1aadfc0e1625808adcfd6d5f216a4c60d37ba7

do_undebian
pushd_src
cd linux_lib/libcrystalhd
sed -ibak "s|/usr/|$PREFIX/|" Makefile
do_make
do_install
popd_src

#!/bin/bash

depends_on libgpg-error
depends_on libgcrypt
depends_on libassuan
depends_on libksba
depends_on libnpth

depends_on zlib  ## opportunistic linking, needed for decoding zlib-compressed payloads
depends_on bzip2 ## opportunistic linking, needed for decoding bzip2-compressed payloads

fetch_source https://gnupg.org/ftp/gcrypt/gnupg/gnupg-2.2.8.tar.bz2 d87553a125832ea90e8aeb3ceeecf24f88de56fb

do_unpack_compile --disable-sqlite --disable-ldap --disable-gnutls --disable-scdaemon --without-readline

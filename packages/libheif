#!/bin/bash

depends_on libde265 ## optional, for decoding, otherwise libheif is useless
depends_on x265 ## optional, for encoding, otherwise libheif is useless
depends_on libjpeg ## opportunistic linking, for heif-convert and heif-enc
depends_on libpng ## opportunistic linking, for heif-convert, heif-enc and heif-thumbnailer

fetch_source https://github.com/strukturag/libheif/releases/download/v1.2.0/libheif-1.2.0.tar.gz 5cbdc62b5975a002bd5b8cf52e3cfc3833104c92

do_unpack_compile

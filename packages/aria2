#!/bin/bash

requires_gcc 4.7 for C++11 support

depends_on pkg-config
depends_on zlib
depends_on libxml
depends_on sqlite3
depends_on openssl
depends_on libgcrypt

fetch_source http://downloads.sourceforge.net/project/aria2/stable/aria2-1.19.0/aria2-1.19.0.tar.xz 00143240025c2b06f729c7c3e36e06ac1d1ff634

do_unpack_compile --without-gnutls

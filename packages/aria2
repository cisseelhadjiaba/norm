#!/bin/bash

requires_gcc 4.7 for C++11 support

depends_on pkg-config
depends_on zlib
depends_on libxml
depends_on sqlite3
depends_on openssl
depends_on libgcrypt

fetch_source https://github.com/tatsuhiro-t/aria2/releases/download/release-1.28.0/aria2-1.28.0.tar.xz 7cafde8426f4ebc86cea7e914316ebae2f87e88a

do_unpack_compile --without-gnutls

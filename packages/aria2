#!/bin/bash

requires_gcc 4.7 for C++11 support

depends_on pkg-config
depends_on zlib
depends_on libxml
depends_on sqlite3
depends_on openssl
depends_on libgcrypt

fetch_source https://github.com/tatsuhiro-t/aria2/releases/download/release-1.23.0/aria2-1.23.0.tar.xz 92656a60a65ca35867e0d7e358fbc5c3e3c06efa

do_unpack_compile --without-gnutls

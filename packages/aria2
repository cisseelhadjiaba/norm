#!/bin/bash

requires_gcc 4.7 for C++11 support

depends_on pkg-config
depends_on zlib
depends_on libxml
depends_on sqlite3
depends_on openssl
depends_on libgcrypt

fetch_source https://github.com/tatsuhiro-t/aria2/releases/download/release-1.26.1/aria2-1.26.1.tar.xz 825c85997bb3fa15eeefb1d73c455b7cdc044dac

do_unpack_compile --without-gnutls

#!/bin/bash

if ! cc_checkflags -x c++ -std=c++11; then
    log "Formula $FORMULA needs C++ compiler that support for C++11 standard"
    log "Try installing newer version of gcc -- norm install gcc-7.1"
    exit 1
fi

depends_on pkg-config
depends_on zlib
depends_on libxml
depends_on openssl
depends_on libgmp

fetch_source https://github.com/tatsuhiro-t/aria2/releases/download/release-1.34.0/aria2-1.34.0.tar.xz 7a804bc7b0788c90f2c62e9eb2249da96d84569b

do_unpack_compile --without-gnutls --without-libssh2 --without-gcrypt --without-sqlite3 --without-libcares

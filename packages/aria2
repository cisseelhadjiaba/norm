#!/bin/bash

requires_gcc 4.7 for C++11 support

depends_on pkg-config
depends_on zlib
depends_on libxml
depends_on sqlite3
depends_on openssl
depends_on libgcrypt

fetch_source https://github.com/tatsuhiro-t/aria2/releases/download/release-1.22.0/aria2-1.22.0.tar.xz 6ae60722e65b3270bd9b1785677298e67f1ee4ad

do_unpack_compile --without-gnutls

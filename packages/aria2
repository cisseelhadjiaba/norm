#!/bin/bash

requires_gcc 4.7 for C++11 support

depends_on pkg-config
depends_on zlib
depends_on libxml
depends_on sqlite3
depends_on openssl
depends_on libgcrypt

fetch_source https://fossies.org/linux/privat/aria2-1.19.2.tar.xz 08595f0a43ebb67aa5114878649d09a9c34a437c

do_unpack_compile --without-gnutls

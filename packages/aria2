#!/bin/bash

requires_gcc 4.7 for C++11 support

depends_on pkg-config
depends_on zlib
depends_on libxml
depends_on sqlite3
depends_on openssl
depends_on libgcrypt

fetch_source https://github.com/tatsuhiro-t/aria2/releases/download/release-1.25.0/aria2-1.25.0.tar.xz ae5a5f6c865f0d1ac501e8a195a6f28c9cbc45ee

do_unpack_compile --without-gnutls

#!/bin/bash

requires_gcc 4.7 for C++11 support

depends_on pkg-config
depends_on zlib
depends_on libxml
depends_on sqlite3
depends_on openssl
depends_on libgcrypt

fetch_source https://github.com/tatsuhiro-t/aria2/releases/download/release-1.27.1/aria2-1.27.1.tar.xz 384ff432bb1301e6cfbeaf1dc21b47c2be42a537

do_unpack_compile --without-gnutls

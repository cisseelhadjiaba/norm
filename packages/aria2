#!/bin/bash

requires_gcc 4.7 for C++11 support

depends_on pkg-config
depends_on zlib
depends_on libxml
depends_on openssl

fetch_source https://github.com/tatsuhiro-t/aria2/releases/download/release-1.31.0/aria2-1.31.0.tar.xz c649d9e07266c8fb9dfcbd9d8f3e8c8987b6df44

do_unpack_compile --without-gnutls --without-libssh2 --without-gcrypt --without-sqlite3

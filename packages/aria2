#!/bin/bash

requires_gcc 4.7 for C++11 support

depends_on pkg-config
depends_on zlib
depends_on libxml
depends_on sqlite3
depends_on openssl
depends_on libgcrypt

fetch_source https://github.com/tatsuhiro-t/aria2/releases/download/release-1.24.0/aria2-1.24.0.tar.xz eea3d61e4970f49e2ac92707c04d65e49785e49d

do_unpack_compile --without-gnutls

#!/bin/bash

fetch_source https://github.com/facebook/zstd/archive/v1.3.4.tar.gz f000e185e02b8ccccd0992e5cb7e88175318d83b

do_unpack
pushd_src
CPPFLAGS="-I. $CPPFLAGS -DZSTD_MULTITHREAD -pthread" do_make -C lib PREFIX="$ESCAPED_PREFIX" HAVE_ZLIB=0 HAVE_LZMA=0 HAVE_LZ4=0
CPPFLAGS="-I. $CPPFLAGS -DZSTD_MULTITHREAD -pthread" do_test PREFIX="$ESCAPED_PREFIX" HAVE_ZLIB=0 HAVE_LZMA=0 HAVE_LZ4=0
CPPFLAGS="-I. $CPPFLAGS -DZSTD_MULTITHREAD -pthread" do_install PREFIX="$ESCAPED_PREFIX" HAVE_ZLIB=0 HAVE_LZMA=0 HAVE_LZ4=0
popd_src

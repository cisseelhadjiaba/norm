#!/bin/bash

depends_on zlib
depends_on xz

fetch_source https://github.com/facebook/zstd/archive/v1.3.3.tar.gz 4bbdc23ab3d4fa18b3b7bd84900b77d554b96dd2

do_unpack
pushd_src
CPPFLAGS="-I. $CPPFLAGS -DZSTD_MULTITHREAD -pthread" do_make -C lib PREFIX="$ESCAPED_PREFIX"
CPPFLAGS="-I. $CPPFLAGS -DZSTD_MULTITHREAD -pthread" do_test PREFIX="$ESCAPED_PREFIX"
CPPFLAGS="-I. $CPPFLAGS -DZSTD_MULTITHREAD -pthread" do_install PREFIX="$ESCAPED_PREFIX"
popd_src

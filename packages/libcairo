#!/bin/bash

depends_on pkg-config
depends_on libx11
depends_on libpng
depends_on pixman
depends_on glib
depends_on libxext
depends_on fontconfig
depends_on libxrender
depends_on xz
depends_on liblzo

fetch_source http://cairographics.org/releases/cairo-1.14.6.tar.xz 0a59324e6cbe031b5b898ff8b9e2ffceb9d114f5

do_unpack_compile --enable-xlib --enable-pdf --enable-ps --enable-png --enable-tee --enable-xlib \
                  --disable-trace \
                  --enable-svg --enable-xcb --enable-xlib-xcb --enable-gobject=yes --enable-pthread

#!/bin/bash

needs_tool asciidoc

fetch_source https://github.com/tinyproxy/tinyproxy/releases/download/1.8.4/tinyproxy-1.8.4.tar.xz 2ecc31268b386c282f4c9f4ed53dd9b76f3c3aee

do_unpack
pushd_src
sed -i.bak 's/-Wl,-z,defs//' "$SRCDIR"/configure
do_configure
cd src
do_make tinyproxy
cd ../etc
do_make tinyproxy.conf
cd ../src
do_test
mkdir -p $PREFIX/bin $PREFIX/etc
install tinyproxy $PREFIX/bin/tinyproxy
install -m644 ../etc/tinyproxy.conf $PREFIX/etc/tinyproxy.conf
popd_src

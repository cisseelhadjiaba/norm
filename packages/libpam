#!/bin/bash

depends_on autoconf automake libtool
depends_on gettext # for autopoint in autoreconf
depends_on libdb
depends_on libcrack
needs_tool flex    # code calls to yywrap()
depends_on libtirpc

fetch_source https://github.com/linux-pam/linux-pam/releases/download/v1.3.1/Linux-PAM-1.3.1.tar.xz e89b6d279c9bf8cb495dfc0b3f3931eb50f818e9

do_unpack
do_autoreconf
do_compile --enable-static --enable-shared --libdir=$PREFIX/lib --enable-isadir=$PREFIX/lib/security \
           --disable-nls \
           --disable-selinux \
           --disable-regenerate-docu --includedir=$PREFIX/include/security

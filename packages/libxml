#!/bin/bash

depends_on zlib
depends_on xz
depends_on pkg-config

fetch_source http://xmlsoft.org/sources/libxml2-2.9.3.tar.gz 0301ce933637e0ceda049047dbefd18714f59b6e
do_unpack
pushd_src
rm -f test/errors/name2.xml # broken
do_configure --with-zlib=$PREFIX --without-python
do_make
! is_without tests && env - PATH="$PATH" make check
do_install
popd_src

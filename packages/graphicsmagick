#!/bin/bash

## imagemagick is useless without common formats, even if they're optional
depends_on libjpeg
depends_on libjbig
depends_on libpng
depends_on libtiff
depends_on libwebp

depends_on liblcms2 ## opportunistic linking, needed for using colour profiles properly

fetch_source https://downloads.sourceforge.net/graphicsmagick/graphicsmagick/1.3.30/GraphicsMagick-1.3.30.tar.xz e9b1f6b84739eef3e112d4905e3d72b1e6983abd

do_unpack_compile --without-wmf --without-x --without-ttf --without-bzlib --without-xml

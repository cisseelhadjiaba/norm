#!/bin/bash

## imagemagick is useless without common formats, even if they're optional
depends_on libjpeg
depends_on libjbig
depends_on libpng
depends_on libtiff
depends_on libwebp

depends_on liblcms2 ## opportunistic linking, needed for using colour profiles properly

fetch_source https://downloads.sourceforge.net/graphicsmagick/graphicsmagick/1.3.29/GraphicsMagick-1.3.29.tar.xz d6963fafaa0e0b5c3d9b112f176f9c8913edb8dd

do_unpack_compile --without-wmf --without-x --without-ttf --without-bzlib --without-xml

#!/bin/bash

depends_on cmake
depends_on libwebp
depends_on zlib
depends_on libtiff
depends_on libjpeg
depends_on libpng
depends_on ffmpeg

fetch_source https://github.com/opencv/opencv/archive/3.2.0.tar.gz 1d148e6543f0f666a98e99b31a69cf74be4c4790

do_unpack
## https://github.com/opencv/opencv/issues/8738 -- disable -march=native until new release is out
CPPFLAGS="${CPPFLAGS/-march=native/}" \
do_compile_outside_notest

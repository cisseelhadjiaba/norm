#!/bin/bash

needs_tool intltool ## didn't find a way to disable it
depends_on gettext ## didn't find a way to disable it
needs_tool pkg-config
depends_on libxml
depends_on glib

fetch_source https://freedesktop.org/~hadess/shared-mime-info-1.10.tar.xz d126fa5a0b16bb5440c6b4c56bf65f83c189e129

do_unpack
sed -i.bak "s|\"/usr/local/share/\"PATH_SEPARATOR\"/usr/share/\"|\"$PREFIX/share/\"PATH_SEPARATOR\"/usr/local/share/\"PATH_SEPARATOR\"/usr/share/\"|" "$SRCDIR"/update-mime-database.c
NOPARALLEL=1 do_compile

#!/bin/bash

depends_on pkg-config
depends_on intltool
depends_on gettext
depends_on glib

fetch_source https://freedesktop.org/~hadess/shared-mime-info-1.8.tar.xz d7ea6a4e7537065de5d0766148be804eb4729cb7

do_unpack
sed -i.bak "s|\"/usr/local/share/\"PATH_SEPARATOR\"/usr/share/\"|\"$PREFIX/share/\"PATH_SEPARATOR\"/usr/local/share/\"PATH_SEPARATOR\"/usr/share/\"|" "$SRCDIR"/update-mime-database.c
do_compile

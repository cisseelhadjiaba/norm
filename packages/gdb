#!/bin/bash

depends_on libncurses
depends_on texinfo
depends_on zlib
depends_on xz
depends_on libexpat

fetch_source http://ftpmirror.gnu.org/gdb/gdb-8.0.1.tar.xz faa945f77cf9bb5ae9530664f8b34ad21e38088f

## gdb test suite is broken -- even their buildbot has failures that are ignored
## plus it needs python, rust, systemtap, gccgo and gfortran -- dependencies too heavy
do_unpack_compile_notest --without-python --without-guile

#!/bin/bash

depends_on shared-mime-info
depends_on pkg-config
depends_on libtiff
depends_on libpng
depends_on glib

fetch_source http://ftp.gnome.org/pub/gnome/sources/gdk-pixbuf/2.36/gdk-pixbuf-2.36.10.tar.xz fb4d1b233ed667f08215664eef90fb8bf8d79cda

do_unpack_compile --enable-debug=no --disable-Bsymbolic --disable-introspection
gdk-pixbuf-csource --raw --build-list apple_red "$PREFIX"/var/norm/pngbar.png

#!/bin/bash

depends_on pkg-config
depends_on libtiff
depends_on libpng
depends_on gobject-introspection

fetch_source http://ftp.gnome.org/pub/gnome/sources/gdk-pixbuf/2.36/gdk-pixbuf-2.36.1.tar.xz 88bd54ef813f2461b455db43d6d0604898ee89dc

do_unpack_compile --enable-debug=no --disable-Bsymbolic --enable-introspection=yes
gdk-pixbuf-csource --raw --build-list apple_red "$PREFIX"/var/norm/pngbar.png

#!/bin/bash

needs_tool pkg-config
depends_on glib
depends_on libtiff
depends_on libjpeg
depends_on libpng
depends_on shared-mime-info

fetch_source http://ftp.gnome.org/pub/gnome/sources/gdk-pixbuf/2.36/gdk-pixbuf-2.36.12.tar.xz 2a32bf71fd7c47b22abd9843bc3116e771772fbe

do_unpack_compile --enable-debug=no --disable-Bsymbolic --disable-introspection
gdk-pixbuf-csource --raw --build-list apple_red "$PREFIX"/var/norm/pngbar.png

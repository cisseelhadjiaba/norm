#!/bin/bash

depends_on libreadline
depends_on autoconf automake libtool

fetch_source http://http.debian.net/debian/pool/main/p/pcre3/pcre3_8.35.orig.tar.gz 5a0efc7332c6741114372020a60acfed22befcb9
fetch_debian http://http.debian.net/debian/pool/main/p/pcre3/pcre3_8.35-3.3+deb8u4.debian.tar.gz 4fc739987e165b16693de34c36a4ba59fff57b0f

## these symlinks prevent reinstallation
rm -f "$PREFIX"/share/man/man3/pcre16_*

do_undebian
do_autoreconf
do_compile --enable-utf8 --enable-unicode-properties --disable-cpp

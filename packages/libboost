#!/bin/bash

depends_on zlib
depends_on bzip2
depends_on libicu
BOOST_WITHOUT_PYTHON="--without-libraries=python"
if [[ "${BASH_SOURCE[0]##*/}" == libboost-python ]]; then
    depends_on libboost
    depends_on python
    BOOST_WITHOUT_PYTHON="--with-libraries=python --with-python=$ESCAPED_PREFIX/bin/python --with-python-root=$ESCAPED_PREFIX"
fi

fetch_source http://downloads.sourceforge.net/project/boost/boost/1.63.0/boost_1_63_0.tar.bz2 9f1dd4fa364a3e3156a77dc17aa562ef06404ff6

BOOTSTRAP_ARGS=(
--prefix="$PREFIX"
cxxflags="$CPPFLAGS"
linkflags="$LDFLAGS"
)

BOOST_ARGS=(
"${BOOTSTRAP_ARGS[@]}"
-d+2
-j$NUMJOBS
link=shared,static
)

do_unpack
pushd_src
./bootstrap.sh "${BOOTSTRAP_ARGS[@]}" $BOOST_WITHOUT_PYTHON
./b2 "${BOOST_ARGS[@]}"
./b2 "${BOOST_ARGS[@]}" install
popd_src

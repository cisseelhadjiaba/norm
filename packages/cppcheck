#!/bin/bash

depends_on libpcre
depends_on libtinyxml

fetch_source http://downloads.sourceforge.net/cppcheck/cppcheck/1.82/cppcheck-1.82.tar.gz 8b3a1ec4eae4172ea3caffa3387bbd869ac2f624

do_unpack
pushd_src
do_make HAVE_RULES=yes LDFLAGS="$LDFLAGS" CFGDIR="$PREFIX/share/cppcheck/cfg"
do_test HAVE_RULES=yes LDFLAGS="$LDFLAGS" CFGDIR="$PREFIX/share/cppcheck/cfg"
do_install PREFIX=$ESCAPED_PREFIX CFGDIR="$PREFIX/share/cppcheck/cfg"
popd_src

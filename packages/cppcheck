#!/bin/bash

depends_on libpcre

fetch_source http://downloads.sourceforge.net/project/cppcheck/cppcheck/1.77/cppcheck-1.77.tar.gz 2d0e4f466a41f0ead5e59716c5cec2353b475651

do_unpack
pushd_src
do_make HAVE_RULES=yes LDFLAGS="$LDFLAGS"
do_test HAVE_RULES=yes LDFLAGS="$LDFLAGS"
do_install PREFIX=$ESCAPED_PREFIX
popd_src

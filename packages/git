#!/bin/bash

## TODO: libldap.so, liblber.so
depends_on zlib

## needed for generating manpages
depends_on gettext

## https support
depends_on openssl
depends_on curl
depends_on libexpat

fetch_source https://www.kernel.org/pub/software/scm/git/git-2.4.5.tar.xz 7692de65cd48fe66acc19ef5a898b6408e16b67b
do_unpack_compile --disable-nls

## install bash completion
install -D $SRCDIR/contrib/completion/git-completion.bash $PREFIX/etc/bash_completion.d/git-completion.bash

## install git manpages
fetch_source https://www.kernel.org/pub/software/scm/git/git-manpages-2.4.5.tar.xz e6ad6859a75c4865fcdfff454fa3739d45d1087e
mkdir -p "$PREFIX/share/man"
cat "$TARDIR/$TARNAME" | xz -d | tar xf - -C "$PREFIX/share/man"

#!/bin/bash

## TODO: libldap.so, liblber.so
depends_on zlib
depends_on gettext

## https support
depends_on openssl
depends_on curl
depends_on libexpat

fetch_source https://www.kernel.org/pub/software/scm/git/git-2.3.1.tar.xz 0d5cfbc32e686985ca7642ee4a924757cbeaed36
do_unpack_compile

## install bash completion
install -D $SRCDIR/contrib/completion/git-completion.bash $PREFIX/etc/bash_completion.d/git-completion.bash
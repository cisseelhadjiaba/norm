#!/bin/bash

## TODO: libldap.so, liblber.so
depends_on zlib
depends_on gettext

## https support
depends_on openssl
depends_on curl
depends_on libexpat

fetch_source https://www.kernel.org/pub/software/scm/git/git-2.4.0.tar.xz f8ee686edc87efd6eafa35323d1646b12dc12ace
do_unpack_compile

## install bash completion
install -D $SRCDIR/contrib/completion/git-completion.bash $PREFIX/etc/bash_completion.d/git-completion.bash

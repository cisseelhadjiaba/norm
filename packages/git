#!/bin/bash

## TODO: libldap.so, liblber.so
depends_on zlib

## needed for generating manpages
depends_on gettext

## https support
depends_on openssl
depends_on curl
depends_on libexpat

fetch_source https://www.kernel.org/pub/software/scm/git/git-2.5.2.tar.xz 5078512c7dba1db2d98814c1abe7550dc18507c9
do_unpack_compile --disable-nls

## install bash completion
install -D $SRCDIR/contrib/completion/git-completion.bash $PREFIX/etc/bash_completion.d/git-completion.bash

## install git manpages
fetch_source https://www.kernel.org/pub/software/scm/git/git-manpages-2.5.2.tar.xz 271ad22f4a41450c7dbfa12549c17a9bfcf40f36
mkdir -p "$PREFIX/share/man"
cat "$TARDIR/$TARNAME" | xz -d | tar xf - -C "$PREFIX/share/man"

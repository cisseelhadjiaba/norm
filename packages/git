#!/bin/bash

## TODO: libldap.so, liblber.so
depends_on zlib
depends_on gettext

## https support
depends_on openssl
depends_on curl
depends_on libexpat

fetch_source https://www.kernel.org/pub/software/scm/git/git-2.3.6.tar.xz 7fda9e3d9d4f51f26e84a75f02d3a19c727566f3
do_unpack_compile

## install bash completion
install -D $SRCDIR/contrib/completion/git-completion.bash $PREFIX/etc/bash_completion.d/git-completion.bash

#!/bin/bash

fetch_source https://ftp.mozilla.org/pub/nspr/releases/v4.19/src/nspr-4.19.tar.gz 907221d51a1f8cca0c3a9e1af93c53e02f5e203b

EXTRA_OPTIONS=
[[ $HOSTTYPE == *64* ]] && EXTRA_OPTIONS=--enable-64bit

do_unpack
SRCDIR=$SRCDIR/nspr
sed -i.bak 's|@executable_path|@rpath|' "$SRCDIR/configure"
do_compile_notest --enable-pthreads --enable-ipv6 --enable-optimize --disable-debug $EXTRA_OPTIONS ## does not have tests

#!/bin/bash

## imagemagick is useless without common formats, even if they're optional
depends_on libjpeg
depends_on libjbig
depends_on libpng
depends_on libtiff
depends_on libwebp
depends_on libbpg
depends_on flif
depends_on libheif
depends_on libopenjpeg
depends_on libopenexr
depends_on liblcms2 ## for handling colour profiles embedded into image files

fetch_source https://dl.bintray.com/homebrew/mirror/imagemagick-7.0.8-8.tar.xz aa235d65d2d3c955c06ae2f2efb0f425ef10ac87

CONFFLAGS=(
--without-lqr
--without-x
--with-modules
--without-freetype
--without-fftw
--without-xml
--without-fontconfig
--without-bzlib
--disable-opencl
--without-wmf
--without-pango
--without-djvu
--without-gvc
)
do_unpack_compile "${CONFFLAGS[@]}"

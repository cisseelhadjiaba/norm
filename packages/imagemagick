#!/bin/bash

depends_on libjpeg
depends_on libjbig
depends_on libpng
depends_on libtiff
depends_on libwebp
depends_on libbpg
depends_on zlib
depends_on bzip2

fetch_source https://github.com/ImageMagick/ImageMagick/archive/7.0.4-3.tar.gz a0d238ad42e7c0f4eb41e7f2660dbfa15014b794

do_unpack_compile --without-x

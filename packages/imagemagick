#!/bin/bash

## imagemagick is useless without common formats, even if they're optional
depends_on libjpeg
depends_on libjbig
depends_on libpng
depends_on libtiff
depends_on libwebp
depends_on libbpg
depends_on flif
depends_on libheif
depends_on libopenjpeg
depends_on libopenexr
depends_on liblcms2 ## for handling colour profiles embedded into image files

fetch_source https://dl.bintray.com/homebrew/mirror/imagemagick--7.0.8-10.tar.xz c69fb5b1ec2d04711a98df8762926a37e3f13bc5

CONFFLAGS=(
--without-lqr
--without-x
--with-modules
--without-freetype
--without-fftw
--without-xml
--without-fontconfig
--without-bzlib
--disable-opencl
--without-wmf
--without-pango
--without-djvu
--without-gvc
)
do_unpack_compile "${CONFFLAGS[@]}"

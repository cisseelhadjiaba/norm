#!/bin/bash

depends_on zlib

fetch_source https://mediaarea.net/download/binary/mediainfo/17.12/MediaInfo_CLI_17.12_GNU_FromSource.tar.bz2 bc3243038723ed40b9c25b7bfc83bc18fa1523f1

do_unpack
OLD="$SRCDIR"
SRCDIR="$OLD/ZenLib/Project/GNU/Library"

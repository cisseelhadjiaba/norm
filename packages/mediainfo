#!/bin/bash

depends_on zlib

fetch_source https://mediaarea.net/download/binary/mediainfo/18.08.1/MediaInfo_CLI_18.08.1_GNU_FromSource.tar.bz2 e60d8cf6533e09a0453d136a5270572b60e91c97

do_unpack
OLD="$SRCDIR"
SRCDIR="$OLD/ZenLib/Project/GNU/Library"
do_compile
SRCDIR="$OLD/MediaInfoLib/Project/GNU/Library"
do_compile
SRCDIR="$OLD/MediaInfo/Project/GNU/CLI"
do_compile

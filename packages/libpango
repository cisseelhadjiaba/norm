#!/bin/bash

depends_on pkg-config
depends_on fontconfig
depends_on freetype
depends_on libxft
depends_on libcairo
depends_on glib
depends_on zlib
depends_on libthai

fetch_source http://ftp.gnome.org/pub/GNOME/sources/pango/1.40/pango-1.40.9.tar.xz cfe80f3a6d70e135f7777f506aef9add36483357

do_unpack_compile --disable-introspection --with-xft

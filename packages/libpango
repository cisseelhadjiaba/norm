#!/bin/bash

depends_on pkg-config
depends_on fontconfig
depends_on freetype
depends_on libxft
depends_on libcairo
depends_on glib
depends_on zlib
depends_on libthai
depends_on libfribidi

fetch_source http://ftp.gnome.org/pub/GNOME/sources/pango/1.42/pango-1.42.0.tar.xz e62a4df0abdb38285744b6883fe78b71397e2153

do_unpack_compile --disable-introspection --with-xft

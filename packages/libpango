#!/bin/bash

depends_on pkg-config
depends_on fontconfig
depends_on freetype
depends_on libxft
depends_on libcairo
depends_on glib
depends_on zlib
depends_on libthai

fetch_source http://ftp.gnome.org/pub/GNOME/sources/pango/1.40/pango-1.40.6.tar.xz 83125850255f78f2130aa373d3fe46f61d064dab

do_unpack_compile --disable-introspection --with-xft

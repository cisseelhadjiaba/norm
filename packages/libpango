#!/bin/bash

depends_on pkg-config
depends_on fontconfig
depends_on freetype
depends_on libxft
depends_on libcairo
depends_on glib
depends_on zlib
depends_on libthai

fetch_source http://ftp.gnome.org/pub/GNOME/sources/pango/1.40/pango-1.40.12.tar.xz d512af5155d983f93e8aefbc28c5ca21423fc4eb

do_unpack_compile --disable-introspection --with-xft

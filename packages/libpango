#!/bin/bash

depends_on pkg-config
depends_on fontconfig
depends_on freetype
depends_on libxft
depends_on libcairo
depends_on glib
depends_on zlib
depends_on libthai

fetch_source http://ftp.gnome.org/pub/GNOME/sources/pango/1.40/pango-1.40.13.tar.xz 59dcae113b6504e16647e966d88a588285e7132b

do_unpack_compile --disable-introspection --with-xft

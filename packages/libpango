#!/bin/bash

depends_on pkg-config
depends_on fontconfig
depends_on freetype
depends_on libxft
depends_on libcairo
depends_on glib
depends_on zlib
depends_on libthai

fetch_source http://ftp.gnome.org/pub/GNOME/sources/pango/1.40/pango-1.40.4.tar.xz 761458faab28cb70ba62e01ec9379d03bc5339c0

do_unpack_compile --disable-introspection --with-xft

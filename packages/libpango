#!/bin/bash

depends_on pkg-config
depends_on fontconfig
depends_on freetype
depends_on libxft
depends_on libcairo
depends_on glib
depends_on zlib
depends_on libthai

fetch_source http://ftp.gnome.org/pub/GNOME/sources/pango/1.40/pango-1.40.11.tar.xz c5fa27a97d666f30340482cc2798d38437c8d111

do_unpack_compile --disable-introspection --with-xft

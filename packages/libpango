#!/bin/bash

depends_on pkg-config
depends_on fontconfig
depends_on freetype
depends_on libxft
depends_on libcairo
depends_on glib
depends_on zlib
depends_on libthai

fetch_source http://ftp.gnome.org/pub/GNOME/sources/pango/1.40/pango-1.40.5.tar.xz 12494900f9cb3a8768795785b06b22bde2fedab3

do_unpack_compile --disable-introspection --with-xft

#!/bin/bash

depends_on pkg-config
depends_on fontconfig
depends_on freetype
depends_on libxft
depends_on libcairo
depends_on glib
depends_on gobject-introspection
depends_on zlib

fetch_source http://ftp.de.debian.org/debian/pool/main/p/pango1.0/pango1.0_1.30.0.orig.tar.xz
fetch_debian http://ftp.de.debian.org/debian/pool/main/p/pango1.0/pango1.0_1.30.0-1.debian.tar.xz
do_undebian
do_compile --enable-introspection=yes --with-xft

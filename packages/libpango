#!/bin/bash

depends_on pkg-config
depends_on fontconfig
depends_on freetype
depends_on libxft
depends_on libcairo
depends_on glib
depends_on gobject-introspection
depends_on zlib

fetch_source http://ftp.gnome.org/pub/GNOME/sources/pango/1.40/pango-1.40.2.tar.xz 947fdb5d6bb9761b3eb7cf2aa5605683632af096

do_unpack_compile --enable-introspection=yes --with-xft

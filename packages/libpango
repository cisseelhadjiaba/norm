#!/bin/bash

depends_on libcairo
depends_on libfribidi
depends_on libthai ## opportunistic linking, no way to disable

fetch_source http://ftp.gnome.org/pub/GNOME/sources/pango/1.42/pango-1.42.3.tar.xz 616f39508fc02c7898933cb69d82c229432d2608

do_unpack_compile --disable-introspection --without-xft

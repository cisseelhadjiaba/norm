#!/bin/bash

depends_on pkg-config
depends_on fontconfig
depends_on freetype
depends_on libxft
depends_on libcairo
depends_on glib
depends_on gobject-introspection
depends_on zlib

fetch_source http://ftp.gnome.org/pub/GNOME/sources/pango/1.39/pango-1.39.0.tar.xz a7780148eb6e246e0249c064f70e1e88bab6e65a

do_unpack_compile --enable-introspection=yes --with-xft

#!/bin/bash

fetch_source https://github.com/rfc1036/whois/archive/v5.3.1.tar.gz d82f405a3fcdd97aa932c1a467d68d851dbc10fc

do_unpack
pushd_src
sed -i.bak 's|mkpasswd pos|mkpasswd|;s|install-mkpasswd install-pos|install-mkpasswd|' Makefile
do_make HAVE_ICONV=1 CONFIG_FILE="$PREFIX/etc/whois.conf"
do_install prefix="$PREFIX"
popd_src

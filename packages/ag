#!/bin/bash

needs_tool autoconf automake
needs_tool pkg-config ## for autoconf macros
depends_on libpcre
depends_on xz ## for liblzma
depends_on zlib

fetch_source https://github.com/ggreer/the_silver_searcher/archive/2.1.0.tar.gz 1e6c3cfe0df5b77b6bf2ce4e24a95ee05151262f

do_unpack
do_autoreconf
do_compile

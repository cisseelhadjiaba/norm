#!/bin/bash

needs_tool cmake
depends_on libboost
needs_tool python
depends_on ragel

fetch_source https://github.com/01org/hyperscan/archive/v4.6.0.tar.gz 64ed476c139bc190a3427f18903445cae7fd11af

## hyperscan seems to choke on presence of -march=native
CPPFLAGS="${CPPFLAGS/-march=native/}" \
do_unpack_compile_notest

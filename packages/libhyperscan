#!/bin/bash

depends_on ragel
depends_on cmake
depends_on libboost
depends_on python
depends_on pkg-config

fetch_source https://github.com/01org/hyperscan/archive/v4.5.1.tar.gz 25a19e241fd05db5445cbe418a898234f9e36ac5

## hyperscan seems to choke on presence of -march=native
CPPFLAGS="${CPPFLAGS/-march=native/}" \
do_unpack_compile_notest

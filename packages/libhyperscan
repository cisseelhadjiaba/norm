#!/bin/bash

needs_tool cmake
depends_on libboost
needs_tool python
depends_on ragel

fetch_source https://github.com/01org/hyperscan/archive/v5.0.0.tar.gz 5cb3fc5726950c4025854da8ec05a15f929279db

## hyperscan seems to choke on presence of -march=native
CPPFLAGS="${CPPFLAGS/-march=native/}" \
do_unpack_compile_notest

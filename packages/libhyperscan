#!/bin/bash

depends_on ragel
depends_on cmake
depends_on libboost
needs_tool python
depends_on pkg-config

fetch_source https://github.com/01org/hyperscan/archive/v4.5.2.tar.gz 87424cffb67646c6076802a757495ac0f3f38d16

## hyperscan seems to choke on presence of -march=native
CPPFLAGS="${CPPFLAGS/-march=native/}" \
do_unpack_compile_notest

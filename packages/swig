#!/bin/bash

depends_on libpcre
depends_on perl ## for perl bindings
depends_on zlib ## opportunistic linking, no way to disable without patching

fetch_source https://downloads.sourceforge.net/project/swig/swig/swig-3.0.12/swig-3.0.12.tar.gz 5cc1af41d041e4cc609580b99bb3dcf720effa25

do_unpack_compile_notest ## swig's C++ tests require boost/shared_ptr.hpp

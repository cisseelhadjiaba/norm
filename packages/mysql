#!/bin/bash

depends_on cmake
depends_on libncurses

fetch_source https://dev.mysql.com/get/Downloads/MySQL-5.6/mysql-5.6.27.tar.gz 92402a41f708e3473ab2831033c7c0af84f61027

do_unpack
pushd_src
cmake . -DCMAKE_INSTALL_PREFIX=\'"$PREFIX"\' -DCMAKE_BUILD_TYPE=Release -DCMAKE_SKIP_RPATH=ON
do_make
! is_without tests && env - PATH="$PATH" make test
do_install
popd

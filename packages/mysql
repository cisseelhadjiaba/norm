#!/bin/bash

needs_tool cmake
depends_on libaio
depends_on libncurses

fetch_source http://cdn.mysql.com/Downloads/MySQL-5.7/mysql-boost-5.7.22.tar.gz f4a65a2789cb2f697178327623407f7314b65faf

CONFOPTS=(
-DWITH_BOOST=boost
-DCURSES_INCLUDE_PATH="$ESCAPED_PREFIX/include/ncurses"
-DENABLE_DOWNLOADS=1
-DBUILD_CONFIG=mysql_release
-DFEATURE_SET=community
-DWITH_EXTRA_CHARSETS=all
)

## tests are broken as of 5.7.17, disable
do_unpack_compile_notest "${CONFOPTS[@]}"

#!/bin/bash

depends_on cmake
depends_on libncurses

fetch_source https://cdn.mysql.com/Downloads/MySQL-5.7/mysql-boost-5.7.12.tar.gz 2eb273dee08ab4ba7d8b235a0a973fe730a6e50f

do_unpack
pushd_src
cmake . -DCMAKE_INSTALL_PREFIX=\'"$PREFIX"\' -DCMAKE_BUILD_TYPE=Release -DCMAKE_SKIP_RPATH=ON -DWITH_BOOST=boost
do_make
! is_without tests && env - PATH="$PATH" make test
do_install
popd

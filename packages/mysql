#!/bin/bash

depends_on cmake
depends_on libncurses

fetch_source https://dev.mysql.com/get/Downloads/MySQL-5.7/mysql-5.7.10.tar.gz 55e637cff121c01ee4725fcc891a4b67cb8690de

do_unpack
pushd_src
cmake . -DCMAKE_INSTALL_PREFIX=\'"$PREFIX"\' -DCMAKE_BUILD_TYPE=Release -DCMAKE_SKIP_RPATH=ON
do_make
! is_without tests && env - PATH="$PATH" make test
do_install
popd

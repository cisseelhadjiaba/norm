#!/bin/bash

depends_on pkg-config # otherwise it won't install .pc files

fetch_source http://ftp.gnu.org/pub/gnu/ncurses/ncurses-6.0.tar.gz acd606135a5124905da770803c05f1f20dd3b21c

CONFOPTS=(
--enable-pc-files
--disable-termcap
--enable-rpath
--enable-const
--enable-symlinks
--without-ada
--without-cxx-binding
--with-shared
--without-debug
--with-pkg-config-libdir="$PREFIX/lib/pkgconfig"
)

do_unpack_compile "${CONFOPTS[@]}"
do_unpack_compile "${CONFOPTS[@]}" --enable-widec

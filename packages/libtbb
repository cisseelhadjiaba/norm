#!/bin/bash

fetch_source https://github.com/01org/tbb/archive/2017_U5.tar.gz 26f720729d322913912e99d1e4a36bd10625d3ca

do_unpack
pushd_src
do_make tbb_build_prefix=BUILDPREFIX
install -d "$PREFIX"/lib
install -m644 build/BUILDPREFIX_release/*.so{,.2} "$PREFIX"/lib/
install -d "$PREFIX"/include
cp -prv include/serial include/tbb "$PREFIX"/include/
popd_src

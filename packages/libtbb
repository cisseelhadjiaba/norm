#!/bin/bash

fetch_source https://github.com/01org/tbb/archive/2018_U2.tar.gz 1d3e011649dbe9259156b6cb0fe15f375abd8f9c

LIBEXT=.so
[[ $OSTYPE == *darwin* ]] && LIBEXT=.dylib

do_unpack
pushd_src
do_make tbb_build_prefix=BUILDPREFIX
install -d "$PREFIX"/lib
install -m755 build/BUILDPREFIX_release/*$LIBEXT build/BUILDPREFIX_release/*$LIBEXT.2 "$PREFIX"/lib/
install -d "$PREFIX"/include
cp -prv include/serial include/tbb "$PREFIX"/include/
popd_src

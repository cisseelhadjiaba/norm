#!/bin/bash

fetch_source http://http.debian.net/debian/pool/main/libc/libcap2/libcap2_2.25.orig.tar.xz f0b102e4a68e1bbdcb6b143b63c34a250e473088
fetch_debian http://http.debian.net/debian/pool/main/libc/libcap2/libcap2_2.25-1.debian.tar.xz 52fa067e3e4125e184898b66890de5ffccff20cd

MAKEFLAGS=(
"prefix=$PREFIX"
RAISE_SETFCAP=no
PAM_CAP=no
LIBATTR=no
lib=lib
)

do_undebian
pushd_src
sed -i.bak 's|%{.*%}|%{\\n#include <stddef.h>\\n%}|' libcap/Makefile
do_make LDFLAGS="$LDFLAGS" "${MAKEFLAGS[@]}"
do_install "${MAKEFLAGS[@]}"
popd

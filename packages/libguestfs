#!/bin/bash

if ! test_cc_value asm/bitsperlong.h __BITS_PER_LONG; then
    log "libguestfs requires linux kernel headers that have asm/bitsperlong.h"
    false
fi

needs_tool perl
depends_on augeas
depends_on qemu
depends_on cpio
depends_on gperf
depends_on cdrkit

fetch_source http://download.libguestfs.org/1.38-stable/libguestfs-1.38.0.tar.gz 38468440de8b4dcada70826c40fa551caf18b992

CPPFLAGS="$CPPFLAGS -I$ESCAPED_PREFIX/include/ncurses"
do_unpack_compile --disable-appliance --disable-daemon
